page{
	width: 100%;
	background: white;
}
.wh100{
	width: 100%;
	height: 100%;
}
.about-header{
	display: flex;
	width: 92%;
	margin:auto;
	align-items: center;
	padding: 30rpx 0;
}
.about-header view:nth-child(1){
	width: 110rpx;
	height: 110rpx;
	border-radius: 50%;
	border:4rpx solid #eee;
	margin-right: 20rpx;
	overflow: hidden;
}
.about-header view:nth-child(2){
	font-size: 32rpx;
	flex:1;
}
/*分割线*/
.pageLine{
    width: 100%;
    height: 30rpx;
    background: #f7f7f7;
}


/***************************新闻资讯***********************/
.item-nav{
	width: 92%;
	margin:auto;
	height: 100rpx;
	display: flex;
	align-items: center;
}
.item-nav-line{
	width: 8rpx;
	height: 30%;
	background: #3e67d9;
	margin-right: 20rpx;
}
.item-nav-text{
	flex:1;
	font-size: 35rpx;
	font-weight: bold;
	color: #3e67d9;
	display: flex;
	align-items: center;
}
.item-nav view:nth-child(3){
	flex:1;
	font-size: 35rpx;
	font-weight: bold;
	color: #3e67d9;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.swiper-current view:nth-child(1){
	
	width: 40rpx;
	height: 40rpx;
	border:1rpx solid #aaa;
	border-radius: 2rpx;
	margin-right: 20rpx;
}

.swiper-current view:nth-child(2){
	
	width: 40rpx;
	height: 40rpx;
	border:1rpx solid #aaa;
	border-radius: 2rpx;
}

/********************新闻资讯列表*********************/
.item-list{
	width: 100%;
	height: 100%;
	margin:auto;
}
.information-newBox-item{
	border-bottom: 0.5rpx solid #eee;
	padding: 40rpx 4%;
	width: 92%;
	/* height: 180rpx; */
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: flex;
}
.information-newBox-line{
	width: 100%;
	height: 2rpx;
	background: #eee;
	margin: 35rpx 0;
}

.information-new-box{
	-webkit-box-flex:2;
	   -moz-box-flex:2;
	    -ms-flex:2;
	        flex:2;
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-moz-box-orient: vertical;
	-moz-box-direction: normal;
	-ms-flex-direction: column;
	flex-direction: column;
}
.information-newBox-image{
	background: #eee;
	/* border-radius: 10rpx; */
	-webkit-box-flex:1.3;
	   -moz-box-flex:1.3;
	    -ms-flex:1.3;
	        flex:1.3;
	overflow: hidden;
}
.information-new-title{
	-webkit-box-flex:1;
	   -moz-box-flex:1;
	    -ms-flex:1;
	        flex:1;
	font-size: 35rpx;
	color: black;
}
.information-new-content{
	margin: 10rpx 0;
	font-size: 26rpx;
	color: #999;

}
.information-new-time{
	-webkit-box-flex:1;
	   -moz-box-flex:1;
	    -ms-flex:1;
	        flex:1;
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-moz-box-align: center;
	-ms-flex-align: center;
	align-items: center;
}
.information-new-label{
	/* border:0.5rpx solid rgb(247,67,58); */
	font-size: 25rpx;
	color: rgb(247,67,58);
	padding: 5rpx 10rpx;
	display: inline-block;
	max-width: 150rpx;
	float: left;
	margin-right: 20rpx;
}
.information-new-timeItem{
	font-size: 23rpx;
	margin-left: 10rpx;
	color: #999;
	display: inline-block;
	float:left;
	flex:1;
	text-align: right;
}
.c0{
	color: #000;
	font-size:30rpx;
}
.tt{
	padding: 2rpx 18rpx;
	background: #ff9619;
	color: white;
	font-size: 28rpx;
	margin-right: 10rpx;
}
